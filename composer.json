{
    "name": "labrodev/postal-formatter",
    "description": "PHP utility class that provides methods to convert mixed values to strings, ints or floats",
    "keywords": [
        "labrodev",
        "php",
        "postal-formatter",
        "helper",
        "utility",
        "static",
        "type-hint",
        "strict_types"
    ],
    "type": "library",
    "homepage": "https://github.com/labrodev/postal-formatter",
    "license": "MIT",
    "authors": [
        {
            "name": "Labro Dev",
            "email": "contact@labrodev.com",
            "role": "Development Team"
        }
    ],
    "support": {
        "email": "admin@labrodev.com",
        "issues": "https://github.com/labrodev/postal-formatter/issues",
        "source": "https://github.com/labrodev/postal-formatter"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "Labrodev\\PostalFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Labrodev\\PostalFormatter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "analyse": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
